<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:weightSum="12">

        <LinearLayout
            style="@style/parent"
            android:background="@drawable/login_shape_bk"
            android:orientation="vertical"
            android:layout_weight="3">

            <ImageView
                style="@style/parent"
                android:background="@drawable/ic_login_bk"
                android:contentDescription="login background" />

        </LinearLayout>

    </LinearLayout>
<androidx.cardview.widget.CardView

    android:id="@+id/Card"
    android:layout_width="390dp"
   android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/backEditA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_rounded"
            app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/nombreA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Nombre del cómic"
        android:textColor="@color/contentTextColor" />

    <EditText
        android:id="@+id/nombreEA"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nombreA"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        android:hint="Inserte el nombre del cómic"
        style="@style/modifiedEditText"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tomoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreEA"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Nombre del tomo al que pertenece el cómic"
        android:textColor="@color/contentTextColor" />

    <EditText
        android:id="@+id/tomoEA"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tomoA"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        android:hint="Inserte el nombre del tomo del cómic"
        style="@style/modifiedEditText"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/anoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tomoEA"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Año de publicación del cómic"
        android:textColor="@color/contentTextColor" />

    <EditText
        android:id="@+id/anoEA"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anoA"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        style="@style/modifiedEditText"
        android:hint="Inserte el año de publicación del cómic"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/autA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/anoEA"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Nombre del autor del cómic"
        android:textColor="@color/contentTextColor" />

    <EditText
        android:id="@+id/autEA"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autA"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        style="@style/modifiedEditText"
        android:hint="Inserte el nombre del autor del cómic"
        android:textSize="13sp" />
    <TextView
        android:id="@+id/dibA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/autEA"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="Nombre del dibujante del cómic"
        android:textColor="@color/contentTextColor" />

    <EditText
        android:id="@+id/dibEA"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dibA"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        style="@style/modifiedEditText"
        android:hint="Inserte el nombre del dibujante del cómic"
        android:textSize="13sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/descA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Card"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:text="Descripción del cómic"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/contentTextColor" />

    <EditText
        android:id="@+id/descEA"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_below="@+id/descA"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="8dp"
        style="@style/modifiedEditText"
        android:hint="Inserte la descripción del cómic"
        android:textSize="13sp" />


    <Button
        android:id="@+id/sendA"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/descEA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_button_bk"
        android:text="Agregar" />


</RelativeLayout>